<!-- Signup Page -->
<div class="auth-container">
    <div class="auth-card signup-card">
        <h1 class="auth-title">Create an account</h1>
        
        <form id="signupForm" class="auth-form">
            <div class="form-row">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" id="firstName" name="firstName" placeholder="First name" required>
                </div>
                
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" id="lastName" name="lastName" placeholder="Last name" required>
                </div>
            </div>
            
            <div class="form-group">
                <label for="dlsuEmail">DLSU Email</label>
                <input type="email" id="dlsuEmail" name="dlsuEmail" placeholder="Your DLSU email address" required>
            </div>
            
            <div class="form-group">
                <label for="idNumber">ID Number</label>
                <input type="text" id="idNumber" name="idNumber" placeholder="Your DLSU ID number" required>
            </div>
            
            <div class="form-group">
                <label>Role</label>
                <div class="radio-group">
                    <label class="radio-option">
                        <input type="radio" name="role" value="Trainer">
                        <span class="radio-custom"></span>
                        Trainer
                    </label>
                    <label class="radio-option">
                        <input type="radio" name="role" value="Volunteer" checked>
                        <span class="radio-custom"></span>
                        Volunteer
                    </label>
                </div>
            </div>
            
            <div class="form-group">
                <label for="signupPassword">Password</label>
                <input type="password" id="signupPassword" name="password" placeholder="Your password" required>
            </div>
            
            <button type="submit" class="btn-auth">Sign Up</button>
            
            <div class="auth-footer">
                <span>Already a member?</span>
                <a href="/login" class="auth-link">Sign in here!</a>
            </div>
        </form>
    </div>
</div>

