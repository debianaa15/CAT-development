<script>
// Week navigation logic to always use /trainer?week=...
function getCurrentWeekParam() {
  const params = new URLSearchParams(window.location.search);
  return params.get('week');
}

document.getElementById('nextWeek').addEventListener('click', function(e) {
  e.preventDefault();
  let currentWeek = getCurrentWeekParam();
  let nextWeek = getNextWeek(currentWeek);
  window.location.href = '/trainer?week=' + nextWeek;
});

document.getElementById('prevWeek').addEventListener('click', function(e) {
  e.preventDefault();
  let currentWeek = getCurrentWeekParam();
  let prevWeek = getPrevWeek(currentWeek);
  window.location.href = '/trainer?week=' + prevWeek;
});

function getNextWeek(weekStr) {
  let d = weekStr ? new Date(weekStr) : new Date();
  d.setDate(d.getDate() + 7);
  return d.toISOString().slice(0, 10);
}
function getPrevWeek(weekStr) {
  let d = weekStr ? new Date(weekStr) : new Date();
  d.setDate(d.getDate() - 7);
  return d.toISOString().slice(0, 10);
}

// Helper function to get date for a day abbreviation
function getDateForDay(dayAbbr) {
  // Find the matching weekDay from the server data
  const weekDays = [
    {{#each weekDays}}
    {
      dayName: '{{dayName}}',
      dateString: '{{dateString}}'
    }{{#unless @last}},{{/unless}}
    {{/each}}
  ];
  
  const matchingDay = weekDays.find(day => day.dayName === dayAbbr);
  
  if (matchingDay) {
    return matchingDay.dateString;
  }
  
  // Fallback to current week calculation
  const currentWeek = '{{currentWeek}}';
  return currentWeek;
}

// Enhanced slot state management
let nookSlotState = {};
let feedingSlotState = {};
let currentFeedingDay = null;
let currentNookDay = null;

// Initialize slot states for each day
const weekDays = ['MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT'];
weekDays.forEach(day => {
  nookSlotState[day] = {
    assigned: false,
    trainerOnly: false,
    trainer: null,
    allowVolunteers: false
  };
  feedingSlotState[day] = {
    assigned: false,
    trainerOnly: false,
    trainer: null,
    allowVolunteers: false,
    volunteers: [],
    maxVolunteers: 5
  };
});

// Load existing server data
loadTrainerData();

function loadTrainerData() {
  try {
    // Parse server data passed from template
    const feedingSignups = JSON.parse('{{{feedingSignups}}}' || '[]');
    const nookSignups = JSON.parse('{{{nookSignups}}}' || '[]');
    const currentUser = '{{user.name}}';
    
    console.log('Loading trainer data:', { feedingSignups, nookSignups, currentUser });
    
    // Process feeding slots
    weekDays.forEach(day => {
      const dayFeedingSignups = feedingSignups.filter(signup => signup.slot_day === day);
      feedingSlotState[day].volunteers = dayFeedingSignups.map(s => s.volunteer_name);
      
      // Check if current user is trainer for this day
      const userTrainerSignup = dayFeedingSignups.find(signup => 
        signup.is_trainer && signup.volunteer_name === currentUser
      );
      
      if (userTrainerSignup) {
        feedingSlotState[day].assigned = true;
        feedingSlotState[day].trainer = userTrainerSignup.volunteer_name;
        feedingSlotState[day].trainerOnly = userTrainerSignup.trainer_only || false;
        feedingSlotState[day].allowVolunteers = !userTrainerSignup.trainer_only;
      }
    });
    
    // Process nook slots  
    weekDays.forEach(day => {
      const dayNookSignups = nookSignups.filter(signup => signup.slot_day === day);
      
      // Check if current user is trainer for this day
      const userTrainerSignup = dayNookSignups.find(signup => 
        signup.is_trainer && signup.volunteer_name === currentUser
      );
      
      if (userTrainerSignup) {
        nookSlotState[day].assigned = true;
        nookSlotState[day].trainer = userTrainerSignup.volunteer_name;
        nookSlotState[day].trainerOnly = userTrainerSignup.trainer_only || false;
        nookSlotState[day].allowVolunteers = !userTrainerSignup.trainer_only;
      }
    });
    
    // Update UI displays
    weekDays.forEach(day => {
      updateNookCardDisplay(day);
      updateFeedingCardDisplay(day);
    });
    
    console.log('Final slot states:', { nookSlotState, feedingSlotState });
  } catch (error) {
    console.error('Error loading trainer data:', error);
  }
}

function openFeedingSlotModal(event) {
  var modal = document.getElementById('feedingSlotModal');
  var assignContent = document.getElementById('feedingModalContent');
  var claimedContent = document.getElementById('feedingModalClaimedContent');
  
  if (event && event.currentTarget) {
    currentFeedingDay = event.currentTarget.getAttribute('data-day');
    currentNookDay = null;
  }
  
  if (modal && currentFeedingDay) {
    modal.style.display = 'flex';
    const dayState = feedingSlotState[currentFeedingDay];
    
    if (dayState.assigned) {
      // Show claimed content
      updateFeedingClaimedContent();
      assignContent.style.display = 'none';
      claimedContent.style.display = 'block';
    } else {
      // Show assignment options
      assignContent.style.display = 'block';
      claimedContent.style.display = 'none';
      // Reset radio buttons
      document.querySelector('input[name="feedingSlotType"][value="justYou"]').checked = true;
    }
  }
}

function openNookSlotModal(event) {
  var modal = document.getElementById('nookSlotModal');
