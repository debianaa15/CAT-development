    }
  }
}

function takeNookSlot() {
  console.log('takeNookSlot called');
  console.log('currentNookDay:', currentNookDay);
  
  if (!currentNookDay) {
    console.error('No currentNookDay set');
    return;
  }
  
  const selectedOption = document.querySelector('input[name="nookSlotType"]:checked');
  if (!selectedOption) {
    console.error('No nookSlotType selected');
    return;
  }
  
  const isTrainerOnly = selectedOption.value === 'justYou';
  
  // Get the current week and date
  const currentWeek = '{{currentWeek}}';
  const date = getDateForDay(currentNookDay);
  
  console.log('Sending request with:', {
    action: 'reserve',
    type: 'nook',
    day: currentNookDay,
    date: date,
    trainer_only: isTrainerOnly,
    currentWeek: currentWeek
  });
  
  // Create JSON payload
  const payload = {
    action: 'reserve',
    type: 'nook',
    day: currentNookDay,
    date: date,
    trainer_only: isTrainerOnly
  };
  
  // Make POST request to trainer route
  fetch(`/trainer?week=${currentWeek}`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(payload)
  })
  .then(response => {
    console.log('Response received:', response);
    if (response.redirected) {
      console.log('Redirecting to:', response.url);
      window.location.href = response.url;
    } else {
      console.log('No redirect, response status:', response.status);
      return response.text();
    }
  })
  .then(data => {
    if (data) {
      console.log('Response data:', data);
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Error assigning nook slot. Please try again.');
  });
}

