<link rel="stylesheet" href="/css/myprofile.css">

<div class="page-header">
    <div class="logo-section">
        <img src="/img/pusa.png" alt="DLSU PUSA" class="page-logo">
    </div>
    
    <div class="nav-buttons">
        <a class="icon-circle" id="profileBtn" aria-label="Home" href="/main">
          <img src="/img/dashboard.png" alt="Profile" class="circle-icon"> 
        </a>
        <button class="btn-outline" id="furAdoptionBtn">Fur Adoption</button>
        <div class="dropdown">
            <button class="icon-circle" id="menuBtn" aria-label="Menu">
                <img src="/img/menu.png" alt="Menu" class="menu-icon">
            </button>
            <div class="dropdown-content" id="dropdownMenu">
                <a href="/myprofile" class="dropdown-item">
                    <span class="dropdown-icon"></span>
                    Profile Settings
                  </a>
                <a href="/about" class="dropdown-item">
                    
                    About PUSA
                </a>
                {{#if isAdmin}}
                <hr class="dropdown-separator">
                <div class="dropdown-item admin-section-title">
                    
                    Admin Panel
                </div>
                <a href="/adminadoptionrequest" class="dropdown-item" id="adminAdoptionRequests">
                    
                    Adoption Requests
                </a>
                <a href="/admin/trainer-users" class="dropdown-item" id="adminTrainerUsers">
                    
                    Manage Trainers
                </a>
                <a href="/admin/volunteer-users" class="dropdown-item" id="adminVolunteerUsers">
                    
                    Manage Volunteers
                </a>
                <a href="/admin/cats" class="dropdown-item" id="adminCats">
                    
                    Manage Cats
                </a>
                {{/if}}
                <a href="#" class="dropdown-item" id="signOutBtn">
                    
                    Sign Out
                </a>
            </div>
        </div>
    </div>
</div>

<div class="myprofile-content-wrapper">
    <div class="about-header">
      <a href="/main" class="about-menuback-btn" aria-label="Back to Home">
        <img src="/img/menuback.png" alt="Menu Back" class="about-menuback" />
      </a>
      <h1 class="about-title">My Profile</h1>
    </div>
<main class="profile-main">
  <section class="profile-info-section">
    <img src="/img/cat2.png" alt="Profile Cat" class="profile-info-cat-left" />
    <div class="profile-info-card">
      <h2>Profile Information</h2>
      <p><strong>Full Name:</strong> John Doe</p>
      <p><strong>Email:</strong> johndoe@dlsu.edu.ph</p>
      <p><strong>ID Number:</strong> 12345678</p>
      <p><strong>Role:</strong> Volunteer</p>
      <p><strong>Password:</strong> <span class="profile-password">••••••••••••••••</span></p>
    </div>
    <div class="profile-quota-card">
         <img src="/img/cat3.png" alt="Profile Cat" class="profile-info-cat-right" />
      <h2>Quota Tracker <span class="profile-term">S.Y 2024 - 2025 Term 3</span></h2>
      <div class="quota-bar-group">
        <div class="quota-label">Feeding</div>
        <div class="quota-bar">
          <span class="quota-bar-rect rect1"></span>
          <span class="quota-bar-rect rect2"></span>
          <span class="quota-bar-rect rect3"></span>
          <span class="quota-bar-rect rect4"></span>
          <span class="quota-bar-rect rect5"></span>
        </div>
        <div class="quota-count">5/5</div>
      </div>
      <div class="quota-bar-group">
          <div class="quota-label">Nook</div>
          <div class="quota-bar">
            <span class="quota-bar-rect rect1"></span>
            <span class="quota-bar-rect rect2"></span>
            <span class="quota-bar-rect rect3"></span>
            <span class="quota-bar-rect rect-empty"></span>
            <span class="quota-bar-rect rect-empty"></span>
          </div>
          <div class="quota-count">3/5</div>
        </div>
    </div>
  </section>
  <section class="profile-schedule-section">
    <div class="profile-schedule-card">
      <h2>Scheduled Duties <span class="profile-week">Week 10</span></h2>
      <div class="profile-duty-list">
        <div class="profile-duty-item feeding">July 18, 2PM <span class="duty-type">Feeding</span></div>
        <div class="profile-duty-item nook">July 18, 2PM <span class="duty-type">Nook</span></div>
      </div>
    </div>
  </section>
</main>
</div>
<script src="/js/script.js"></script>

